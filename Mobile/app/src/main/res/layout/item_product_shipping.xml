<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo" />

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txt_name_shipping_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000 VND"
                android:textColor="#FF0000"
                android:textSize="16sp" />

            <!-- Shipping Text -->
            <TextView
                android:id="@+id/txt_shipping_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping info here"
                android:textSize="14sp"
                android:textColor="#888888"/>
        </LinearLayout>

        <!-- Quantity -->
        <TextView
            android:id="@+id/txt_quantity_shipping_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="x 1"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
