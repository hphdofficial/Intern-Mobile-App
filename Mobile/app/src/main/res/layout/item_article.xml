<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    tools:context=".ViewModel.ArticleAdapter">

    <!-- Title Section -->
    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài viết 1: Giới thiệu về sản phẩm mới"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="#3E50B4"
        android:textColor="@android:color/white" />

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="8dp">

        <TextView
            android:id="@+id/article_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúng tôi xin giới thiệu các sản phẩm mới với chất lượng cao và công nghệ tiên tiến."
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#333333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Các sản phẩm gồm có:"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#333333"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Găng tay: Chất liệu bền bỉ."
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="#333333"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Đai: Thiết kế chắc chắn."
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="#333333"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Quần Áo: Mẫu mã đa dạng."
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="#333333"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Giáp: Bảo vệ toàn diện."
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="#333333"
            />
    </LinearLayout>
</LinearLayout>
