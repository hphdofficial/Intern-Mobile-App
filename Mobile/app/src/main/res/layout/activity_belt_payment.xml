        <TextView
            android:textSize="18sp"
            android:id="@+id/color"
            android:textColor="#F08080"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineat"
            android:text="Màu đai: ">

        </TextView>
        <TextView
            android:textSize="18sp"
            android:id="@+id/danhxung"
            android:textColor="#F08080"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color"
            android:text="Danh xưng: ">

        </TextView>

        <TextView
            android:textSize="18sp"
            android:id="@+id/status_class"
            android:textColor="@color/black"
            android:background="#ADD8E6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/danhxung"
            android:text="Mô tả">

        </TextView>

        <TextView
            android:textSize="16sp"
            android:id="@+id/status"
            android:textColor="#000"
            android:background="#ADD8E6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_class"
            android:text="Mô tả">

        </TextView>

        <TextView
            android:textSize="18sp"
            android:id="@+id/date_learn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:background="#FF6347"
            android:text="Tình trạng: ">

        </TextView>






       <LinearLayout
           android:id="@+id/payment_belt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/date_learn"
           android:orientation="vertical">
           <LinearLayout
               android:id="@+id/linear"
               android:background="#FF6347"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/money"

                   android:textSize="18sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Phí đăng ký thi"
                   >

               </TextView>

               <TextView
                   android:textAlignment="textEnd"
                   android:id="@+id/total"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/money"
                   android:text="0đ "
                   android:textSize="18sp">

               </TextView>

           </LinearLayout>
           <LinearLayout
               android:id="@+id/linear1"
               android:background="#FF6347"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/date"
                   android:textSize="18sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Thời gian thi"
                   >

               </TextView>

               <TextView
                   android:textAlignment="textEnd"
                   android:id="@+id/date1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/money"
                   android:text="22/06/2024 "
                   android:textSize="18sp">

               </TextView>

           </LinearLayout>
           <Button
               
               android:id="@+id/buttonRegister"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/linear"
               android:layout_marginTop="16dp"
               android:text="Quét qr để thanh toán phí đăng ký" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_below="@id/buttonRegister"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/qrcode"
                  android:layout_width="200dp"
                  android:layout_height="200dp"

                  ></ImageView>
          </LinearLayout>
       </LinearLayout>

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
