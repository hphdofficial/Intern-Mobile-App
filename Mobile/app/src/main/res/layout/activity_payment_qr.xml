<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentQR">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="42dp">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/beautiful_color"
            android:id="@+id/author"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:textSize="16sp"
            android:layout_above="@+id/stk"
            android:text="Chủ sở hữu: ">


        </TextView>
        <TextView
android:id="@+id/stk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_above="@+id/bank"
            android:textSize="16sp"
            android:text="Số tài khoản: ">


        </TextView>
        <TextView
            android:textSize="16sp"
            android:id="@+id/bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_above="@+id/imageViewQRCode"
            android:text="Tên ngân hàng: ">


        </TextView>
        <TextView
            android:id="@+id/abc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewQRCode"
            android:textAlignment="center"
            android:textColor="@color/beautiful_color"
            android:text="Cảm ơn đã mua sản phẩm của chung1 tôi vui lòng quét QR để thanh toán">

        </TextView>



        <ImageView
            android:id="@+id/imageViewQRCode"
            android:layout_width="300dp"

            android:layout_height="300dp"
android:textAlignment="center"
            android:layout_centerInParent="true"
            android:background="@android:color/white"
            android:contentDescription="QR Code"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/buttonGenerateQRCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/abc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Quay về trang chính" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>