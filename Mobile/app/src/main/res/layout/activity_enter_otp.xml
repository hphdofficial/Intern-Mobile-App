<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterOtpActivity">

    <!-- Back button -->
    <ImageView
        android:id="@+id/img_back"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/backicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Banner image -->
    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="303dp"
        android:layout_height="154dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/logostartmain"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Text: Nhập mã OTP -->
    <TextView
        android:id="@+id/tv_enter_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Nhập mã OTP"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_banner" />

    <!-- Text: Thông báo mã OTP đã gửi -->
    <TextView
        android:id="@+id/tv_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="Mã gồm 6 chữ số đã được gửi"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_otp" />

    <!-- Text: Số điện thoại -->
    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Đã gửi về Email của ban!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notification" />

    <!-- Container chứa mã OTP -->
    <LinearLayout
        android:id="@+id/container_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_number">

        <!-- EditText: Mã số 1 -->
        <EditText
            android:id="@+id/inputCode1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/khung_otp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:contentDescription="Mã số 1"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />

        <!-- EditText: Mã số 2 -->
        <EditText
            android:id="@+id/inputCode2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/khung_otp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:contentDescription="Mã số 2"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/inputCode1"
            app:layout_constraintTop_toTopOf="@+id/inputCode1"
            tools:ignore="LabelFor" />

        <!-- EditText: Mã số 3 -->
        <EditText
            android:id="@+id/inputCode3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/khung_otp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:contentDescription="Mã số 3"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/inputCode2"
            app:layout_constraintTop_toTopOf="@+id/inputCode2"
            tools:ignore="LabelFor" />

        <!-- EditText: Mã số 4 -->
        <EditText
            android:id="@+id/inputCode4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/khung_otp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:contentDescription="Mã số 4"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/inputCode3"
            app:layout_constraintTop_toTopOf="@+id/inputCode3"
            tools:ignore="LabelFor" />

        <!-- EditText: Mã số 5 -->
        <EditText
            android:id="@+id/inputCode5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/khung_otp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:contentDescription="Mã số 5"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/inputCode4"
            app:layout_constraintTop_toTopOf="@+id/inputCode4"
            tools:ignore="LabelFor" />

        <!-- EditText: Mã số 6 -->
        <EditText
            android:id="@+id/inputCode6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/khung_otp"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAccessibility="yes"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:contentDescription="Mã số 6"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/inputCode5"
            app:layout_constraintTop_toTopOf="@+id/inputCode5"
            tools:ignore="LabelFor" />


    </LinearLayout>

    <!-- Container: Gửi lại OTP -->
    <LinearLayout
        android:id="@+id/container_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/container_otp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không nhận được OTP?"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvResendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Gửi lại OTP"
            android:textColor="@android:color/holo_red_light"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Container: Nút Xác nhận -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/container_resend">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:background="@drawable/khung_btn_sign_in"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
